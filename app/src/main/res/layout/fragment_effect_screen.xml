<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EffectScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_audio_tmp"
            android:layout_marginTop="80dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/audio_file"/>
        <TextView
            android:id="@+id/txt_audio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text=""/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_effect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"/>

            <LinearLayout
                android:id="@+id/btn_add_audio"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:background="@drawable/capsule_button"
                >
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/ic_baseline_add_circle_outline_24" />
                <TextView
                    android:id="@+id/txt_add_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Effect"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>
            <Button
                android:background="@drawable/play"
                android:visibility="gone"
                android:id="@+id/btn_effect_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>